<h3><%= @cocktail.name %></h3>
<p>About: <%= @cocktail.description %></p>
<p>Ingredients:</p>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li>
      <%= "#{dose.ingredient.name}: #{dose.description}" %> |
      <%= link_to 'Delete', dose_path(dose), method: :delete, data: { confirm: 'Confirm delete?' } %>
    </li>
  <% end %>
</ul>
<%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail) %>
